<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="0,0,0,0">
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="New_Click" IsEnabled="False"/>
                <MenuItem Header="Open" Click="Open_Click"/>
                <MenuItem Header="Save" Click="Save_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="New" Click="NewRecord_Click"/>
                <MenuItem Header="Remove Selected" Click="RemoveSel_Click"/>
            </MenuItem>
        </Menu>

        <ListView x:Name="listView" Margin="0,20,0,20">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,0,0,0"/>
                    <Setter Property="Margin" Value="0,0,0,0"/>
                </Style>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,0,0,0"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PESEL" DisplayMemberBinding="{Binding m_strPESEL}" Width="50"/>
                    <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding m_strName}" Width="50"/>
                    <GridViewColumn Header="Drugie imię" DisplayMemberBinding="{Binding m_strAnotherName}" Width="50"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding m_strSname}" Width="70"/>
                    <GridViewColumn Header="Data urodzenia" DisplayMemberBinding="{Binding m_strDateBirth}" Width="70"/>
                    <GridViewColumn Header="Numer telefonu" DisplayMemberBinding="{Binding m_strPhoneNumber}" Width="70"/>
                    <GridViewColumn Header="Adres zamieszkania" DisplayMemberBinding="{Binding m_strAdress}" Width="70"/>
                    <GridViewColumn Header="Miejscowość" DisplayMemberBinding="{Binding m_strLocality}" Width="70"/>
                    <GridViewColumn Header="Kod pocztowy" DisplayMemberBinding="{Binding m_strZipCode}" Width="70"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Dodaj" Margin="690,382,35,10" Click="Button_Click" Width="75px" Height="40px" Cursor="" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
